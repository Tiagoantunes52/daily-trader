# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password

# Scheduler Configuration
MORNING_TIME=06:00
EVENING_TIME=18:00
TIMEZONE=UTC

# API Configuration (All free sources - API keys are optional)
# CoinGecko: Free crypto data, no API key required
# Get optional API key at: https://www.coingecko.com/en/api
CRYPTO_API_KEY=

# Alpha Vantage: Free stock data, defaults to "demo" key if not provided
# Get free API key at: https://www.alphavantage.co/
STOCK_API_KEY=

CACHE_TTL=300

# Database Configuration
DATABASE_URL=sqlite:///./market_tips.db
DATABASE_ECHO=false

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth Configuration
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:8000/auth/github/callback

# Application Configuration
DEBUG=false
